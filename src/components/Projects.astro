---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import LinkButton from "./LinkButton.astro";
import Python from "./icons/Python.astro";
import Docker from "./icons/Docker.astro";
import React from "./icons/React.astro";
import Dotnet from "./icons/Dotnet.astro";
import Azure from "./icons/Azure.astro";
import JWT from "./icons/JWT.astro";

const TAGS = {
  REACT: {
    name: "React",
    class: "bg-white text-black",
    icon: React,
  },
  DOTNET: {
    name: ".NET",
    class: "bg-white text-black",
    icon: Dotnet,
  },
  AZURE: {
    name: "Azure",
    class: "bg-white text-black",
    icon: Azure,
  },
  JWT: {
    name: "JWT",
    class: "bg-white text-black",
    icon: JWT,
  },
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  PYTHON: {
    name: "Python",
    class: "bg-white text-black",
    icon: Python,
  },
  DOCKER: {
    name: "Docker",
    class: "bg-[#1d63ed] text-white",
    icon: Docker,
  },
};
const PROJECTS = [
  {
    title: "Event Engagement",
    description:
      "Aplicación web interna para la gestión de eventos presenciales por parte del departamento de Marketing de Encamina, con generación de sorteos y ganadores. Desplegado completamente en azure. ",
    image: "/projects/encamina.webp",
    tags: [TAGS.REACT, TAGS.AZURE, TAGS.DOTNET, TAGS.JWT],
  },
  {
    title: "Knowlify",
    description:
      "Aplicación web para el intercambio de conocimientos y habilidades entre personas fomentando el aprendizaje colaborativo.",
    image: "/projects/knowlify.webp",
    tags: [TAGS.REACT, TAGS.AZURE, TAGS.DOTNET, TAGS.JWT],
  },
  {
    title: "Billy The Kid Bot",
    description:
      "Bot de telegram que gestiona automáticamente ordenes de compra. Las mantiene a un determinado %precio mas bajo, buscando una bajada brusca del precio. Toda la interacción con el bot es vía telegram.",
    github: "https://github.com/madxjack/Billy-The-Kid-Bot",
    image: "/projects/billy.webp",
    tags: [TAGS.PYTHON, TAGS.DOCKER],
  },
  {
    title: "Beliz Beauty Landing Page",
    description:
      "Landing page para una empresa especializada en productos de belleza.",
    link: "https://beliz-proffesional.vercel.app/",
    github: "https://github.com/madxjack/beliz-proffesional",
    image: "/projects/beliz.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Arbitrage Trading Bot",
    description:
      "Bot que arbitra precios entre Kraken, Binance, Coinbase y Kukoin. Si encuentra una oportunidad, lo notifica via Telegram.",
    link: "",
    github: "https://github.com/madxjack/Arbitrage-Trading-Bot",
    image: "/projects/atb.webp",
    tags: [TAGS.PYTHON, TAGS.DOCKER],
  },
  {
    title: "OLHC Bot",
    description:
      "Bot de telegram que notifica cuando hay variaciones bruscas de precio en velas de 1 minuto en Kraken.",
    link: "",
    github: "https://github.com/madxjack/olhc-Trading-Bot",
    image: "/projects/olhc.webp",
    tags: [TAGS.PYTHON, TAGS.DOCKER],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <>
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                  <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                  <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                  <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                  <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                  <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                  <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                  <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                  <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
                </>
              </svg>
              Ir al sitio web
            </LinkButton>
          )}
        </footer>
      </article>
    ))
  }
</div>
